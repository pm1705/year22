<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#474646"
    tools:context=".MainActivity">

    <Space
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_weight="5" />

    <LinearLayout
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_weight="90"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="5" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="15"
            android:fontFamily="monospace"
            android:gravity="center"
            android:text="SEQUENCE CALCULATOR"
            android:textColor="#D5D5D5"
            android:textSize="30sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="5"
            android:background="#F4F3F3" />

        <ToggleButton
            android:id="@+id/tb1"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="10"
            android:background="#E16161"
            android:fontFamily="monospace"
            android:text="ToggleButton"
            android:textOff="Sequence type: Arithmetic"
            android:textOn="Sequence type: Geometric"
            android:textSize="18sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="5"
            android:background="#F4F3F3" />

        <EditText
            android:id="@+id/et1"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="10"
            android:ems="10"
            android:fontFamily="monospace"
            android:hint="First item in sequence"
            android:inputType="numberSigned|numberDecimal"
            android:textColor="#FFFFFF"
            android:textColorHint="#BCBCBC" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="5" />

        <EditText
            android:id="@+id/et2"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="10"
            android:ems="10"
            android:fontFamily="monospace"
            android:hint="Sequence diffrence"
            android:inputType="numberSigned|numberDecimal"
            android:textColor="#FFFFFF"
            android:textColorHint="#BCBCBC" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="5"
            android:background="#F4F3F3" />

        <Button
            android:id="@+id/b1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#215257"
            android:fontFamily="monospace"
            android:onClick="send"
            android:text="SOLVE"
            android:textSize="18sp"
            app:backgroundTint="#4FCDB5" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="30" />

    </LinearLayout>

    <Space
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_weight="5" />
</LinearLayout>